// Custom styles.

// surviving days in the side bar
#site-days {
  display: inline-block;
  font-size: 13px;
  text-align: center;
  vertical-align: middle;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  margin-bottom: 10px;
  color: $grey-dark;
  border-bottom-color: $black-light;
}

// inline code color
code {
    color: $KURENAI;
    background: $SHIRONERI;
}

// dynamic background color
.bg_content {
  position: fixed;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

// scroll-bar
::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}
::-webkit-scrollbar-thumb {
  border-radius: 5px;
  background-color: rgba(0,0,0,.2);
}
::-webkit-scrollbar-thumb:hover {
  border-radius: 5px;
  background-color: $FUJIMURASAKI;
}

// copyright in the post
.post-copyright, .followme {
  border-radius: 10px;
}

// blockquote
blockquote {
  border-radius: 10px;
}

