.post-body p a, .post-body ul a, .post-body h2 a, .post-copyright a {
  color: $RURI;
  border-bottom: none;

  &:hover {
    color: $RURIKON;
    border-bottom: 1px dashed;
  }
}

// .posts-collapse .post-title a,
span.exturl {
  color: $RURI;

  &:hover {
    color: $RURIKON;
  }
}

.posts-expand .post-tags a {
  border: 0.1em solid $SANGOSYU;
  padding: 0.25em;
  line-height: 1.2em;
  background: $GINSYU;
  color: #fff;
  font-size: 16px;
  border-radius: 10px;

  &:hover {
    box-shadow: 0 0 1em 0.5em $TAIKOH;
  }

  &:nth-child(2n) {
    border: 0.1em solid $NAE;
    background: $MIDORI;

    &:hover {
      box-shadow: 0 0 1em 0.5em $BYAKUROKU;
    }
  }

  &:nth-child(3n) {
    border: 0.1em solid $RURI;
    background: $KONJYO;

    &:hover {
      box-shadow: 0 0 1em 0.5em $MIZU;
    }
  }

  &:nth-child(4n) {
    border: 0.1em solid $TOKIGARACHA;
    background: $KABACHA;

    &:hover {
      box-shadow: 0 0 1em 0.5em $SHAREGAKI;
    }
  }
}

.utterances {
  max-width: none;
}

.posts-expand .post-body img {
  border: none;
}

.hosted-by {
  display: inline-block;
}

span.exturl.theme-link, span.exturl.host-link {
  color: #999;
}

