span.exturl.theme-link, span.exturl.host-link {
  color: #999;
}

.text-right {
  text-align: right;
}

.text-center {
  text-align: center;
}

ol.footnotes-list {
  counter-reset: list;
}

ol.footnotes-list > li.footnote-item {
  list-style: none;
}

ol.footnotes-list > li.footnote-item:before {
    counter-increment: list;
    content: "[" counter(list, decimal) "] ";
    position: absolute;
    left: 0.5em;
}

ul.category-list > li {
    list-style-type: disc;
}

.site-brand-container {
  padding: 0 0;
}

.site-nav-toggle, .site-nav-right {
  background: $brand-bg;
}

.katex {
  font-size: 1.1em !important;
}