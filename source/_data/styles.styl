@font-face {
  font-family: "GuDianMingChaoTi";
  src: url("../fonts/GuDianMingChaoTi.eot"); /* IE9 */
  src: url("../fonts/GuDianMingChaoTi.eot?#iefix") format("embedded-opentype"), /* IE6-IE8 */
    url("../fonts/GuDianMingChaoTi.woff") format("woff"), /* chrome, firefox */
    url("../fonts/GuDianMingChaoTi.ttf") format("truetype"), /* chrome, firefox, opera, Safari, Android, iOS 4.2+ */
    url("../fonts/GuDianMingChaoTi.svg#WenYue GuDianMingChaoTi (Non-Commercial Use) W5") format("svg"); /* iOS 4.1- */
  font-style: normal;
  font-weight: normal;
}

