  font-size: 22px;
}

.site-subtitle {
  font-family: "GuDianMingChaoTi";
  font-size: 22px;
  color: #fff;
}

.site-author-name {
  font-family: "ZHJXinWeiTi";
  font-weight: normal;
}

.site-meta {
  background: $SUMIRE;
}

