\input tkzset.tex

\begin{tikzpicture}
  \tkzDefPoint(0,0){B}
  \tkzDefPoint(5,0){C}
  \tkzDefPoint(1.3,1.75){A}
  \tkzDefSquare(B,A)  \tkzGetPoints{E}{D}
  \tkzDefSquare(A,C)  \tkzGetPoints{F}{G}
  \tkzDefMidPoint(D,F)  \tkzGetPoint{P}

  \tkzDrawPolygon[lines](A,B,D,E)
  \tkzDrawPolygon[lines](A,C,F,G)
  \tkzDrawSegments[lines=blue!80!black](B,C E,G D,F)
  \tkzDrawPolySeg[lines=red](B,P,C)

  \tkzDrawPoints[dots](A,...,G)
  \tkzDrawPoint[dots=red](P)
  \tkzLabelPoints[below](A,...,C)
  \tkzLabelPoints[above](G,P)
  \tkzLabelPoints[right](F)
  \tkzLabelPoints[left](D)
  \tkzLabelPoints[above left](E)
\end{tikzpicture}
